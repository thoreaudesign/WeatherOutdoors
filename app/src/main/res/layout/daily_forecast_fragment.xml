<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/current_summary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/current_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hot."
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/current_icon"
        app:layout_constraintEnd_toEndOf="@+id/current_icon"
        app:layout_constraintStart_toStartOf="@+id/current_icon" />

    <ImageView
        android:id="@+id/current_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@mipmap/hot_foreground" />

    <TextView
        android:id="@+id/current_degrees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="99 degrees."
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/current_icon"
        app:layout_constraintStart_toStartOf="@+id/current_icon"
        app:layout_constraintTop_toBottomOf="@+id/current_icon" />

</android.support.constraint.ConstraintLayout>
