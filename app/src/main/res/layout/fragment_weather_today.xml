<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="weatherDataObservable"
            type="com.thoreaudesign.weatheroutdoors.livedata.WeatherDataObservable"
            />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/current_summary"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="10.0sp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="10.0sp" />

        <TextView
            android:id="@+id/current_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8.0sp"
            android:layout_marginTop="8.0sp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18.0sp"
            app:layout_constraintStart_toStartOf="@+id/current_icon"
            app:layout_constraintTop_toBottomOf="@+id/current_icon"
            android:text="Current description"
            />

        <ImageView
            android:id="@+id/current_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8.0sp"
            android:layout_marginTop="8.0sp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toTopOf="@+id/guideline"
            android:src="@mipmap/hot_foreground"
            />

        <TextView
            android:id="@+id/current_degrees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8.0sp"
            android:layout_marginTop="8.0sp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25.0sp"
            app:layout_constraintStart_toEndOf="@+id/current_icon"
            app:layout_constraintTop_toTopOf="@+id/guideline"
            android:text="95F"
            />

        <TextView
            android:id="@+id/current_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.0sp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12.0sp"
            app:layout_constraintStart_toStartOf="@+id/current_degrees"
            app:layout_constraintTop_toBottomOf="@+id/current_apparent_temp"
            android:text="Humidity: 80%"
            />

        <TextView
            android:id="@+id/current_apparent_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.0sp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12.0sp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="@+id/current_humidity"
            app:layout_constraintTop_toBottomOf="@+id/current_degrees"
            android:text="Feels like 105F"
            />

        <TextView
            android:id="@+id/current_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.0sp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12.0sp"
            app:layout_constraintStart_toStartOf="@+id/current_humidity"
            app:layout_constraintTop_toBottomOf="@+id/current_humidity"
            android:text="Wind 25mph SSW"
            />

        <TextView
            android:id="@+id/current_dewpoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.0sp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12.0sp"
            app:layout_constraintStart_toStartOf="@+id/current_wind"
            app:layout_constraintTop_toBottomOf="@+id/current_wind"
            android:text="Dew point: 76F"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="170.0sp" />

        <TextView
            android:id="@+id/nearest_storm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.0sp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20.0sp"
            app:layout_constraintTop_toBottomOf="@+id/guideline3"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Nearest storm: 32mi SSW"
            />

        <TextView
            android:id="@+id/precipProbability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.0sp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20.0sp"
            app:layout_constraintTop_toBottomOf="@+id/nearest_storm"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Chance of rain: 50%"
            />

        <TextView
            android:id="@+id/precipIntensity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.0sp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20.0sp"
            app:layout_constraintTop_toBottomOf="@+id/precipProbability"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Precipitation Intensity: 3 in/hr"
            />

        <TextView
            android:id="@+id/cloudCover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.0sp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20.0sp"
            app:layout_constraintTop_toBottomOf="@+id/precipIntensity"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Cloud cover: 40%"
            />

        <TextView
            android:id="@+id/visibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.0sp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20.0sp"
            app:layout_constraintTop_toBottomOf="@+id/cloudCover"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Visibility: 20mi"
            />

        <TextView
            android:id="@+id/uvIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.0sp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20.0sp"
            app:layout_constraintTop_toBottomOf="@+id/visibility"
            app:layout_constraintStart_toStartOf="parent"
            android:text="UV Index: 5"
            />

        <TextView
            android:id="@+id/ozone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.0sp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20.0sp"
            app:layout_constraintTop_toBottomOf="@+id/uvIndex"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Ozone: 334"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>